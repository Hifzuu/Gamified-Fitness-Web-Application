@model ProjectWebApp.Models.RaffleViewModel
@{
    ViewData["Title"] = "Raffle";
}
@* "https://via.placeholder.com/800x400" *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ProjectWebApp</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/site.css" />
</head>

<body>
    <div class="page-container">
        <div class="row">
            <div class="col-md-6">
                <section>
                    <div id="raffleCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            @foreach (var raffle in Model.Raffles)
                            {
                                <div class="carousel-item @(raffle == Model.Raffles.First() ? "active" : "")">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <img class="raffle-image img-fluid" src="https://via.placeholder.com/800x600.png/555555/ffffff?text=Raffle+Image" alt="@raffle.Name" style="max-height: 200px;">
                                        </div>
                                        <div class="col-md-12">
                                            <div class="raffle-info p-4">
                                                <h3 class="mb-3 text-primary">@raffle.Name</h3>
                                                <p class="description mb-3">@raffle.Description</p>
                                                <p class="text-muted"><strong>Start Date:</strong> @raffle.StartDate.ToString("MMMM dd, yyyy")</p>
                                                <p class="text-muted"><strong>End Date:</strong> @raffle.EndDate.ToString("MMMM dd, yyyy")</p>
                                                <p class="text-muted"><strong>Cost:</strong> <i class="fas fa-coins gold-coin-icon"></i>@raffle.Cost.ToString("F0")</p>
                                                <div class="mt-4">
                                                    <a href="#" class="btn btn-primary btn-lg enter-raffle-btn" data-cost="@raffle.Cost" data-raffle-id="@raffle.RaffleId">Enter Raffle</a>
                                                </div>
                                            </div>
                                        </div>
                                       
                                    </div>
                                </div>
                            }
                        </div>
                        <a class="carousel-control-prev" href="#raffleCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#raffleCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </section>

            </div>
            <div class="col-md-6">
                <section>
                    <h3>My Entries</h3>
                    <div class="card">
                        <ul class="list-group list-group-flush">
                            @foreach (var enteredRaffle in Model.UserEnteredRaffles)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex flex-column">
                                            <h5 class="mb-1 font-weight-bold">@enteredRaffle.Name</h5>
                                            <p class="mb-0 text-muted">@enteredRaffle.EntryTimestamp.ToString("MMMM dd, yyyy")</p>
                                        </div>
                                        <div class="text-right">
                                            <div class="badge badge-info p-2">
                                                @if (DateTime.UtcNow > enteredRaffle.EndDate)
                                                {
                                                    <span class="text-danger font-weight-bold">Raffle ended on <br>@enteredRaffle.EndDate.ToString("MMMM dd, yyyy")</span>
                                                }
                                                else
                                                {
                                                    <span class="font-weight-bold">Ends on <br>@enteredRaffle.EndDate.ToString("MMMM dd, yyyy")</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </section>
            </div>






        </div>



       


    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>
        $(document).ready(function () {
            $(".enter-raffle-btn").click(function () {
                console.log("Raw data-Cost:", $(this).data("Cost"));
                var raffleCost = parseInt($(this).data("cost"), 10);
                var raffleId = $(this).data("raffle-id"); // Add this line to get the raffle ID
                console.log("Parsed raffleCost:", raffleCost);

                // Make an AJAX request to check user points and add raffle entry
                $.ajax({
                    url: '@Url.Action("AddRaffleEntry", "Raffle")',
                    type: 'POST',
                    data: { raffleCost: raffleCost, raffleId: raffleId }, // Pass the raffle ID
                    success: function (result) {
                        if (result.success) {
                            // Check if the user is already entered
                            if (result.alreadyEntered) {
                                // User is already entered, show a message
                                Swal.fire({
                                    icon: 'info',
                                    title: 'Already Entered',
                                    text: 'You are already entered in this raffle.',
                                });
                            } else {
                                // Raffle entry added successfully, show a success message
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Raffle Entered Successfully!',
                                    text: result.message,
                                    showConfirmButton: false,
                                    timer: 1500
                                });
                            }
                        } else {
                            // Error adding raffle entry, show an error message
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: result.message
                            });
                        }
                    },
                    error: function () {
                        // Handle errors when adding raffle entry
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'An error occurred while adding the raffle entry. Please try again.'
                        });
                    }
                });
            });
        });
    </script>




</body>
</html>
