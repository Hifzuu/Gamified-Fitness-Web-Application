@model List<RaffleViewModel>
@{
    ViewData["Title"] = "Raffle";
}
@* "https://via.placeholder.com/800x400" *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ProjectWebApp</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/site.css" />
</head>

<body>
    <div class="container mt-6">
        <h2>@ViewData["Title"]</h2>
        <section>
            <div class="container2">
                <div id="raffleCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="carousel-item @((i == 0) ? "active" : "")">
                                <div class="row">
                                    <div class="col-md-6">
                                        <img class="raffle-image" src="https://via.placeholder.com/800x400.png?text=Placeholder+Image" alt="@Model[i].Name">
                                    </div>
                                    <div class="col-md-6">
                                        <div class="raffle-info p-4">
                                            <h3 class="mb-3 text-primary">@Model[i].Name</h3>
                                            <p class="description mb-3">@Model[i].Description</p>
                                            <p class="text-muted"><strong>Start Date:</strong> @Model[i].StartDate.ToString("MMMM dd, yyyy")</p>
                                            <p class="text-muted"><strong>End Date:</strong> @Model[i].EndDate.ToString("MMMM dd, yyyy")</p>
                                            <p class="text-muted"><strong>Cost:</strong> <i class="fas fa-coins gold-coin-icon"></i>@Model[i].Cost.ToString("F0")</p>
                                            <div class="mt-4">
                                                <a href="#" class="btn btn-primary btn-lg enter-raffle-btn" data-cost="@Model[i].Cost">Enter Raffle</a>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>

            <div class="carousel-controls">
                <a class="carousel-control-prev" href="#raffleCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-text" aria-hidden="true">Previous</span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#raffleCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-text" aria-hidden="true">Next</span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </section>

       


    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>
        $(document).ready(function () {
            $(".enter-raffle-btn").click(function () {
                console.log("Raw data-Cost:", $(this).data("Cost"));
                var raffleCost = parseInt($(this).data("cost"), 10);
                console.log("Parsed raffleCost:", raffleCost);

                // Log the parsed raffleCost to the console
                console.log("Parsed raffleCost:", raffleCost);

                // Make an AJAX request to check user points
                $.ajax({
                    url: '@Url.Action("CheckUserPoints", "Raffle")',
                    type: 'POST',
                    data: { raffleCost: raffleCost },
                    success: function (result) {
                if (result.success) {
                    // User has enough points, you can redirect or show a success message
                    Swal.fire({
                        icon: 'success',
                        title: 'Raffle Entered Successfully!',
                        text: result.message,
                        showConfirmButton: false,
                        timer: 1500
                    });
                } else {
                    // User does not have enough points, show an error message
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: result.message
                    });
                }
            },
            error: function () {
                // Handle errors here
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while checking user points. Please try again.'
                });
            }
                });
            });
        });

    </script>

</body>
</html>
