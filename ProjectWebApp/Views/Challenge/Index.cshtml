                                        <button class="btn btn-reward game-button" onclick="claimReward('Monthly', @Model.MonthlyChallenge.UserChallengeId)">Claim Reward 🎁</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-reward game-button claimed" disabled>Claimed 🎁</button>
                                    }
