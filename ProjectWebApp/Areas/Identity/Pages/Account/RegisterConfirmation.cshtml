@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        body {
            background-color: #e5eeff; /* Dark background color */
            color: #fff; /* Light text color */
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            color: aliceblue; /* Highlight color for the title */
        }

        .confirmation-message {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container text-center">
        <h1>@ViewData["Title"]</h1>

        @if (Model.DisplayConfirmAccountLink)
        {
            <div class="container confirmation-message">
                <div class="alert alert-info">
                    <h5 class="mb-3"><strong>Important Note:</strong></h5>
                    <p>
                        🌟 Great news! You're on your way to an amazing fitness journey.
                        <br>This app is so excited to have you onboard! 🎉
                    </p>
                </div>

                <p class="lead">
                    📬 To complete your registration, click the button below:
                </p>
                <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-primary btn-lg mt-3">Confirm Your Account</a>

            </div>
        }
        else
        {
            <div class="confirmation-message">
                <p>
                    Please check your email to confirm your account.
                </p>
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>