@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        body {
            background-color: #e5eeff; 
            color: #343a40; 
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            color: aliceblue; /* Highlight color for the title */
        }

        .confirmation-message {
            padding: 20px;
            background-color: #fff; /* White background color */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Subtle box shadow */
        }

        .reward-container {
            margin-top: 30px;
        }

        .reward-icon {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <div class="mt-4 confirmation-message text-center">
            <partial name="_StatusMessage" model="Model.StatusMessage" />

            <div class="reward-container">
                <p class="mb-0 h2 text-success">🎉 Congratulations!</p>
                <p class="mb-0 h4">You've just earned <span class="font-weight-bold">50 Points</span> as a Welcome Bonus!</p>
            </div>

            <p class="mt-3">
                <strong>Log in and Let the Fitness Journey begin!</strong>
            </p>

            <!-- Add the login button here -->
            <a asp-page="/Account/Login" class="btn btn-primary">Log In</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>